@model IEnumerable<UCP1_PAW_121_C.Models.SewaTravel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Biaya")
            </th>
            <th>
                @Html.DisplayName("Kuota")
            </th>
            <th>
                @Html.DisplayName("Total Bayar")
            </th>
            <th>
                @Html.DisplayName("Id Jadwal")
            </th>
            <th>
                @Html.DisplayName("Id Pelanggan")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Biaya)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kuota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalBayar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdJadwalNavigation.IdJadwal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPelangganNavigation.IdPelanggan)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdSewaTravel"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdSewaTravel"><i class="fas fa-list"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdSewaTravel"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
